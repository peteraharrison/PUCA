citHeader("To cite PUCA in publications use:")

citEntry(entry = "Article",
         title        = "Integrating climate change and habitat fragmentation 
                 to identify candidate seed sources for ecological restoration",
         author       = personList(as.person("PA Harrison"),
                                   as.person("RE Vaillancourt"),
                                   as.person("RMB Harris"),
                                   as.person("BM Potts")),
         journal      = "Restoration Ecology",
         year         = "2017",
         volume       = "25",
         number       = "4",
         pages        = "524-531",
         url          = "https://doi.org/10.1111/rec.12488",
         
         textVersion  =
           paste("PA Harrison, RE Vaillancourt, RMB Harris, BM Potts",
                 "(2017) Integrating climate change and habitat fragmentation 
                 to identify candidate seed sources for ecological restoration.
                 Restoration Ecology 25(4) 524-531. doi: 10.1111/rec.12488.")
)